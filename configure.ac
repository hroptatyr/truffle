AM_INIT_AUTOMAKE([foreign parallel-tests dist-xz color-tests])
m4_ifdef([AM_SILENT_RULES], [AM_SILENT_RULES([yes])])

GIT_VERSION_MAGIC
AC_CONFIG_LINKS([GNUmakefile:GNUmakefile])

if test -z "${CFLAGS}"; then
	CFLAGS="-g -O3 -Wall -Wunused -Wunused-function -Wuninitialized"
fi

## the build chain
AC_PROG_CC([icc tcc gcc cc])
SXE_CHECK_CC([gnu11 gnu99])
SXE_CHECK_CFLAGS
AC_CHECK_TOOLS([AR], [xiar ar], [false])
AC_C_BIGENDIAN
AC_PROG_RANLIB

AC_CHECK_HEADERS([dfp754.h])
AM_CONDITIONAL([HAVE_DFP754], [test "${ac_cv_header_dfp754_h}" = "yes"])

AC_CHECK_HEADERS([dfp/stdlib.h])
AM_CONDITIONAL([HAVE_DFP_STDLIB], [test "${ac_cv_header_dfp_stdlib_h}" = "yes"])

AC_CHECK_FUNCS([strtod32])
AM_CONDITIONAL([HAVE_STRTOD32], [test "${ac_cv_func_strtod32}" = "yes"])

AC_CHECK_FUNCS([quantized32])
AM_CONDITIONAL([HAVE_QUANTIZED32], [test "${ac_cv_func_quantized32}" = "yes"])

AC_CHECK_FUNCS([scalbnd32])
AM_CONDITIONAL([HAVE_SCALBND32], [test "${ac_cv_func_scalbnd32}" = "yes"])

SXE_CHECK_ASM_CORUS

AM_MISSING_PROG([HELP2MAN], [help2man], ["${missing_dir}"])

## coroutine provider
AC_ARG_WITH([asm-backed-coroutines], [
AS_HELP_STRING([--with-asm-backed-coroutines], [
Provide coroutines through asm-backed frame switching instead
of more portable setjmp/longjmp/ucontext.])
AS_HELP_STRING([], [Default: with if supported])],
	[with_asm_corus="${withval}"], [with_asm_corus="${sxe_cv_feat_asm_corus}"])
if test "${sxe_cv_feat_asm_corus}" = "no" -a "${with_asm_corus}" = "yes"; then
	AC_MSG_WARN([
asm backed coroutines on your wishlist but it's already been determined
that they won't work for your platform.  I hope you know what you're
doing.
])
fi
AM_CONDITIONAL([USE_ASM_CORUS], [test "${with_asm_corus}" = "yes"])
if test "${with_asm_corus}" = "yes"; then
	AC_DEFINE([USE_ASM_CORUS], [1], [Whether to use asm backed coroutines])
fi


## trivial, no special stuff needed
apps="${apps} truffle"
apps="${apps} trod"

if test "${with_asm_corus}" = "yes"; then
	coru=" asm"
else
	coru=" setjmp/longjmp/ucontext"
fi

AC_CONFIG_FILES([Makefile])
AC_CONFIG_FILES([src/Makefile])
AC_CONFIG_FILES([info/Makefile])
AC_CONFIG_FILES([test/Makefile])
AC_OUTPUT

echo
echo
echo "Build summary"
echo "============="
echo
echo "Build apps:${apps}"
echo "Coroutines:${coru}"
echo

